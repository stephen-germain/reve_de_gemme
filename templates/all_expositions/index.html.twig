{% extends 'base.html.twig' %}

{% block title %}Date d'exposition{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container">
    <div class="row justify-content-md-center">
        <div class="col-10">
            <div class="row p-5">
                <div class="col-12">
                    <h1>Date d'exposition</h1>
                </div>
            </div>
            <div class="row p-5">
            {% for exposition in expositions %}
                <div class="col-12 col-md-4">
                    <p>{{ exposition.adresse}}</p>
                    <p>{{ exposition.city }}</p>
                    <p>{{ exposition.zipCode}}</p>
                    <p>{{ exposition.day|date("d/m/Y") }}</p>
                    <p>{{ exposition.beginAt|date("H:i") }}</p>
                    <p>{{ exposition.endAt|date("H:i") }}</p>
                    <hr>
                </div>
            {% endfor %} 
            </div>
        </div>
    </div>
</div>
{% endblock %}
