{% extends 'base.html.twig' %}

{% block title %}Les bracelets par cat√©gories{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container">
    <div class="row justify-content-md-center">
        <div class="col-10">
            <div class="row p-5">
                <div class="col-4">
                    <h1>{{bracelets.name}}</h1>
                </div>
            </div>
            <div class="row p-5">
                <div class="col-md-5">
                    <div class="card col-3" style="width: 18rem;">
                        {% for product in bracelets.products %}
                            <a href="{{ path('app_product_details', {id:product.id})}}">
                                <img src="{{ asset('img/' ~ product.image)}}" class="card-img-top" alt="..."> 
                                <div class="card-body">
                                    <h5 class="card-title">{{ product.name }}</h5>
                                </div>
                            </a>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
